class Vehicle

  def initialize
    @broken = true
  end

  def broken?
    @broken
  end

  def broken=(value)
    @broken =(value)
  end
end

class Car < Vehicle

end

class Motorcycle < Vehicle

end

class Truck < Vehicle

end

class Mechanic
  def operate(vehicle)
    vehicle.broken = false
  end
end

require 'rubygems'
require 'spec'

Spec::Runner.configure do

end

puts "About to run!"

Spec::Runner.run
